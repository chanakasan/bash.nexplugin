# vim:ft=sh:

g() {
  local a="$1"
  if [ $a ]; then
    g-$a "${@:2}"
   else
    git status
  fi
}

_nx_is_number() {
  local var="$1"
  if [ -n "$var" ] && [ "$var" -eq "$var" ] 2>/dev/null; then
    echo "true"
  else
    echo "false"
  fi
}

g-ir() {
  local v="$1"
  local is_num=$(_nx_is_number $v)
  if [ -z "$v" ]; then
    git rebase -i HEAD~10
  elif [ "$is_num" = "true" ]; then
    git rebase -i HEAD~$1
  elif [ "$v" = "root" ]; then
    git rebase -i --root
  else
    echo "arg must be an number"
  fi
}

g-add() {
  local v="$1"
  if [ -z "$v" ]; then
    git add --update .
  elif [ "$v" = "all" ]; then
    git add --all
  else
    git add "$@"
  fi
}

# write
alias gb='git branch'
alias gpushb='git push origin HEAD'
alias git-cherry='git cherry-pick'
alias gt='git tag -a -m'


# commits
alias gc='git commit -v'
alias gc-amend='git commit --amend'
alias gc-first='git commit -m "first commit"'
alias gc-empty='git commit -m "empty project"'
alias gc-wip='git commit -m "WIP"'
alias gc-up='git commit -m "revision"'
alias gc-rev='git commit -m "revision"'


# danger
alias gr='git reset'
alias grl='git reset HEAD~1'
alias gco='git checkout'
alias grcon='git rebase --continue'
alias grab='git rebase --abort'

# stats
alias gl='git log'
alias glg='git log --all --graph --oneline --decorate'
alias gd='git diff'
alias gdc='git diff --cached'
alias gcount='git rev-list HEAD --count'

# other
alias clone="git clone"
alias remote="git remote"
alias push="git push"
alias pull="git pull"

g-branch-url() {
  echo `cat .mygiturl`/commits/`g-branch`
}

g-branch() {
  git symbolic-ref --short HEAD
}

