#vim:ft=sh:

show() {
  local v="$1"
  if [ -z "$v" ]; then
    echo "mod_show: missing args <subcommand>" 
  else
    show_$v "${@:2}"
  fi
}

show_win() {
  show_windows
}

show_ss() {
  show_sessions
}

show_windows() {
  tmux list-windows -F '#I: #{window_name}' |\
  sed '/:.$/d' |\
  # sed '/^./&' |\
  fzf --reverse
  # xargs echo tmux select-window -t
}

show_sessions() {
  tmux list-sessions -F '#{session_name}' |\
  sed '/^$/d' |\
  fzf --reverse |\
  xargs tmux switch-client -t
}
